<form {{action "submit" on="submit"}}>
  <label for="name">Name</label> {{input value=name placeholder="enter name"}}
  <label for="email">Email</label> {{input value=email placeholder="enter email"}}
  <label for="password">Password</label> {{input value=password type="password" placeholder="enter password"}}
  <label for="password_confirm">Password Confirmation</label> {{input value=password_confirm type="password" placeholder="enter password again"}}
  <button type="submit">Login</button>
</form>
{{#if errorMessage}}
  {{errorMessage}}
{{/if}}
