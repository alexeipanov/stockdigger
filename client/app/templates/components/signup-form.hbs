<section class="center">
  <form {{action "submit" on="submit"}}>
    {{#if errorMessage}}
      <span class="error">{{errorMessage}}</span>
    {{/if}}
    <label for="name">Name</label> {{input value=name placeholder="enter name" required="required"}}
    <label for="email">Email</label> {{input value=email placeholder="enter email" required="required"}}
    <label for="password">Password</label> {{input value=password type="password" placeholder="enter password" required="required"}}
    <label for="password_confirmation">Password Confirmation</label> {{input value=password_confirmation type="password" placeholder="enter password again" required="required"}}
    <button type="submit">Submit</button>
  </form>
</section>
